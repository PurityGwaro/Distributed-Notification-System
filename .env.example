# Application
NODE_ENV=development
PORT=3000

# Docker Images (for production deployment)
API_GATEWAY_IMAGE=ghcr.io/puritygwaro/distributed-notification-system:main-api-gateway
USER_SERVICE_IMAGE=ghcr.io/puritygwaro/distributed-notification-system:main-user-service

# API Gateway
API_GATEWAY_PORT=3000

# User Service
USER_SERVICE_PORT=3001

# Database - User Service
USER_DB_HOST=localhost
USER_DB_PORT=5432
USER_DB_USERNAME=postgres
USER_DB_PASSWORD=postgres
USER_DB_NAME=user_service

# Production PostgreSQL Credentials (for docker-compose.prod.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=user_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=notifications.direct
RABBITMQ_EMAIL_QUEUE=email.queue
RABBITMQ_PUSH_QUEUE=push.queue
RABBITMQ_FAILED_QUEUE=failed.queue

# Production RabbitMQ Credentials (for docker-compose.prod.yml)
RABBITMQ_USER=guest
RABBITMQ_PASS=your-rabbitmq-password-here

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
